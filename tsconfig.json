{
    "compilerOptions": {
      "outDir": "build",
      "lib": ["es2020"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "ES2020",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "allowJs": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "build"]
  }
  